{% macro cover(src, lazyLoad = false) %}
    <img class="cover" {% if not lazyLoad %} src="{{src}}" {% else %} data-lazy-src="{{src}}" {% endif %} />
{% endmacro %}

{% macro contain(src, lazyLoad = false) %}
    <img class="contain"  {% if not lazyLoad %} src="{{src}}" {% else %} data-lazy-src="{{src}}" {% endif %}  />
{% endmacro %}
